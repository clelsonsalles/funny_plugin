<div class="container-md">
             <%= form_for @coleta, url: coleta_anual_atualizar_path, :html => {:id => "formColeta"} do |f| %>
                   <%= f.hidden_field :id, :value => @coleta.id %>
                   <%= f.hidden_field :uf, :value => @coleta.uf %>
                   <%= f.hidden_field :cidade, :value => @coleta.cidade %>
                   <%= f.hidden_field :codigoIBGE, :value => @coleta.codigoIBGE %>
                   <%= f.hidden_field :ano, :value => @coleta.ano %>
                   <%= f.hidden_field :tituloColeta, :value => @coleta.tituloColeta %>
                   <%= f.hidden_field :tipoColeta, :value => @coleta.tipoColeta %>
                   <%= f.hidden_field :project_id, :value => @coleta.project_id %>

                    <div class="box-title"><%= @coleta.tipoColeta %></div>
                       <div class="box-description">Coleta de dados de acessos:
                         
                       <div class="row mb-3">
                         <div class="col-md-6">
                              <p><%= f.label :cnpj, "CNPJ", class: "form-label" %></p>
                              <p><%= f.text_field :cnpj, class: "form-control", id: "cnpj", 
                                      placeholder: "Digite o CNPJ da Prestadora", required: true,
                                      maxlength: 14, oninput: "this.value = this.value.replace(/[^0-9]/g, '')" %></p>
                         </div>
                         <div class="col-md-6">
                               <p><%= f.label :ano, "Ano", class: "form-label" %></p>
                               <p><%= f.text_field :ano, class: "form-control", id: "ano", placeholder: "Digite o ano", required: true %></p>
                         </div>
                       </div>

                      <div class="row mb-3">
                        <div class="col-md-6">
                          <p><%= f.label :idEstacao, "Id Estação", class: "form-label" %></p>
                          <p><%= f.text_field :idEstacao, class: "form-control", id: "idEstacao", placeholder: "Id da Estação", required: true %></p>
                        </div>
                        <div class="col-md-6">
                          <p><%= f.label :nEstacao, "Número da Estação", class: "form-label" %></p>
                          <p><%= f.text_field :nEstacao, class: "form-control", id: "nEstacao", placeholder: "Número da Estação", required: true %></p>
                        </div>
                      </div>

                     <div class="row mb-3">
                      <div class="col-md-6">
                         <p><%= f.label :codigoIBGE, "Código IBGE", class: "form-label" %></p>
                         <p><%= f.text_field :codigoIBGE, class: "form-control", id: "codigoIBGE", placeholder: "Código IBGE", disabled: true, required: true %></p>
                      </div>
                       <div class="col-md-6">
                          <p><%= f.label :abertura, "Abertura", class: "form-label" %></p>
                          <p><%= f.select :abertura, options_for_select([['s', 'S(SIM)'], ['n', 'N(NÃO)']]), required: true %></p>
                        </div>
                    </div>

                    <div class="row mb-3">
                      <div class="col-md-6">
                         <p><%= f.label :cep, "Cep", class: "form-label" %></p>
                         <p><%= f.text_field :cep, class: "form-control", id: "cep", placeholder: "Cep", required: true %></p>
                      </div>
                       <div class="col-md-6">
                          <p><%= f.label :cidade, "Cidade", class: "form-label" %></p>
                          <p><%= f.text_field :cidade, class: "form-control", id: "cidade", placeholder: "Cidade", disabled: true, required: true %></p>
                        </div>
                    </div>

                    <div class="row mb-3">
                      <div class="col-md-6">
                         <p><%= f.label :rua, "Rua", class: "form-label" %></p>
                         <p><%= f.text_field :rua, class: "form-control", rua: "Rua", placeholder: "Rua", required: true %></p>
                      </div>
                       <div class="col-md-6">
                          <p><%= f.label :numeroEndereco, "Número", class: "form-label" %></p>
                          <p><%= f.text_field :numeroEndereco, class: "form-control", numero: "Número", placeholder: "Número", required: true %></p>
                        </div>
                    </div>

                     <div class="row mb-3">
                      <div class="col-md-6">
                         <p><%= f.label :latitude, "Latitude", class: "form-label" %></p>
                         <p><%= f.text_field :latitude, class: "form-control", latitude: "Latitude", placeholder: "Latitude", required: true %></p>
                      </div>
                       <div class="col-md-6">
                          <p><%= f.label :longitude, "Longitude", class: "form-label" %></p>
                          <p><%= f.text_field :longitude, class: "form-control", longitude: "Longitude", placeholder: "Longitude", required: true %></p>
                        </div>
                    </div>

                    <div class="row mb-3">
                       <div class="col-md-6">
                          <%= f.submit "Adicionar", class: 'btn btn-secondary text-white' %>
                        </div>
                        <div class="col-md-6">
                          <%= link_to 'Concluir', cliente_cliente_path, class: 'btn btn-secondary btn-lg  text-white' %>

                        </div>
                      </div>



               <% end %>

  </div>
</div>

 <br/><br/>

<div class="container">
  <h4> Lista de Coletas</h4>
    <table class="table table-custom">
            <thead class="thead-light">
                <tr>
                    <th scope="col">CNPJ</th>
                    <th scope="col">Ano</th>
                    <th scope="col">Id da estação</th>
                    <th scope="col">Número da Estação</th>
                    <th scope="col">Código IBGE</th>
                    <th scope="col">Abertura</th>
                    <th scope="col">Cep</th>
                    <th scope="col">Cidade</th>
                    <th scope="col">Rua</th>
                    <th scope="col">Número</th> 
                    <th scope="col">Latitude</th>
                    <th scope="col">Longitude</th>
                </tr>
            </thead>
            <tbody>
             <% for coleta in @coletas %>
                <tr> 
                     <td><%= coleta.cnpj %></td>
                     <td><%= coleta.ano %></td>
                     <td><%= coleta.idEstacao %></td>
                     <td><%= coleta.nEstacao %></td>
                     <td><%= coleta.codigoIBGE %></td>
                     <td><%= coleta.abertura %></td>
                     <td><%= coleta.cep %></td>
                     <td><%= coleta.cidade %></td>
                     <td><%= coleta.rua %></td>
                     <td><%= coleta.numeroEndereco %></td>
                     <td><%= coleta.latitude %></td>
                     <td><%= coleta.longitude %></td>
                      
                </tr>
            <% end %>
              
               
            </tbody>
        </table>
</div>
