
<% if  @coletas.nil? %>
  <h2>Não há coletas para este cliente! </h2>
<% else %>

<div class="container">
   <h2><strong><%= @organizacao.nome %></strong></h2><br/>

       <div class="row justify-content-center">
            
            
       
    

<div class="container mt-5">
     <div class="box-title">COLETAS <BR/></div>
        <table class="table table-custom">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Data</th>
                    <th scope="col">Status</th>
                    <th scope="col">Formulário</th>
                    <th scope="col">Tipo</th>
                    <th scope="col">Ação</th>
                </tr>
            </thead>
            <tbody>

                <% for coleta in @coletas %>
                <tr>
                    <td><%= coleta.textoData %></td>
                    <td><%= coleta.status %></td>
                    <td><%= coleta.tituloColeta %></td>
                    <td><%= coleta.tipoColeta %></td>
                    <% if coleta.dataRealizacao.nil? %>
                        <% if coleta.tituloColeta == 'Coleta Mensal' %>
                          <td><a href="/coleta/mensalfazer?id_coleta=<%= coleta.id %>" class="btn btn-sm btn-custom">Fazer coleta</a> </td>
                        <% end %>
                        <% if coleta.tituloColeta == 'Coleta Semestral' %>
                          <td><a href="/coleta/semestralfazer?id_coleta=<%= coleta.id %>" class="btn btn-sm btn-custom">Fazer coleta</a> </td>
                        <% end %>
                        <% if coleta.tituloColeta == 'Coleta Anual' %>
                          <td><a href="/coleta/anualfazer?id_coleta=<%= coleta.id %>" class="btn btn-sm btn-custom">Fazer coleta</a> </td>
                        <% end %>
                    <% else %>
                        <td>Enviada para o Analista</td>
                    <% end %>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>


<% end %>

