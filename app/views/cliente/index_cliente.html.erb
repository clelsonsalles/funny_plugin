<% if  @coletas.nil? %>
  <h2>Não há coletas para este cliente! </h2>
<% else %>

<div class="container">
   
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="custom-box">
                    <div class="box-title">MENSAL</div>
                    <div class="box-description">Coleta de dados de acessos</div>
                    <a href="#" class="box-link">Ver coletas</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="custom-box">
                    <div class="box-title">SEMESTRAL</div>
                    <div class="box-description">Coleta de dados Econômicos-financeiros e Técnico-operacionais</div>
                    <a href="#" class="box-link">Ver coletas</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="custom-box">
                    <div class="box-title">ANUAL</div>
                    <div class="box-description">Coleta de dados de Infraestrutura de Transporte<br/><br/></div>
                    <a href="#" class="box-link">Ver coletas</a>
                </div>
            </div>
        </div>
    </div>

<div class="container mt-5">
     <div class="box-title">COLETAS <BR/></div>
        <table class="table table-custom">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Data</th>
                    <th scope="col">Status</th>
                    <th scope="col">Formulário</th>
                    <th scope="col">Tipo</th>
                    <th scope="col">Ação</th>
                </tr>
            </thead>
            <tbody>

                <% for coleta in @coletas %>
                <tr>
                    <td><%= coleta.textoData %></td>
                    <td><%= coleta.status %></td>
                    <td><%= coleta.tituloColeta %></td>
                    <td><%= coleta.tipoColeta %></td>
                    <% if coleta.dataRealizacao.nil? %>
                        <% if coleta.tituloColeta == 'Coleta Mensal' %>
                          <td><a href="/coleta/mensalfazer?id_coleta=<%= coleta.id %>" class="btn btn-sm btn-custom">Fazer coleta</a> </td>
                        <% end %>
                        <% if coleta.tituloColeta == 'Coleta Semestral' %>
                          <td><a href="/coleta/semestralfazer?id_coleta=<%= coleta.id %>" class="btn btn-sm btn-custom">Fazer coleta</a> </td>
                        <% end %>
                        <% if coleta.tituloColeta == 'Coleta Anual' %>
                          <td><a href="/coleta/anualfazer?id_coleta=<%= coleta.id %>" class="btn btn-sm btn-custom">Fazer coleta</a> </td>
                        <% end %>
                    <% else %>
                        <% if coleta.tituloColeta == 'Coleta Mensal' %>
                          <td><a href="/coleta/mensalvisualizar?id_coleta=<%= coleta.id %>" class="btn btn-sm btn-custom">Ver coleta</a> </td>
                        <% end %>
                        <% if coleta.tituloColeta == 'Coleta Semestral' %>
                          <td><a href="/coleta/semestralvisualizar?id_coleta=<%= coleta.id %>" class="btn btn-sm btn-custom">Ver coleta</a> </td>
                        <% end %>
                        <% if coleta.tituloColeta == 'Coleta Anual' %>
                          <td><a href="/coleta/anualvisualizar?id_coleta=<%= coleta.id %>" class="btn btn-sm btn-custom">Ver coleta</a> </td>
                        <% end %>
                    <% end %>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>


<% end %>

