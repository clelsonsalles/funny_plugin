
<% if  @coletas.nil? %>
  <h2>Não há coletas para este cliente! </h2>
<% else %>

<div class="container">
  
       <div class="row justify-content-center">



<div class="container mt-5">
<h3><strong><%=@organizacao.nome %></strong></h3><br/>
        <h5><strong>Dados da Empresa</strong></h5>
        <div class="card">
            <div class="card-body d-flex">
                <div class="me-3">
                    <strong>Cnpj:</strong> <%= @organizacao.cnpj %><br/>
                    <strong>Endereço :</strong> <%= @organizacao.endereco %><br/>
                    <strong>Cep:</strong> <%= @organizacao.cep %><br/>
                    <strong>Uf:</strong> <%= @organizacao.uf %><br/>
                    <strong>Telefone:</strong> <%= @organizacao.telefone %><br/>
                    <strong>Email:</strong> <%= @organizacao.email %><br/>
                    <strong>Serviços de Telecom:</strong> <%= @organizacao.servicos %>
                </div>
               
               
            </div>
        </div>
        <%= link_to("Recibos", project_documents_path(@projetoPreenchimento), :class => @projetoPreenchimento.css_classes).html_safe %>
    </div>


<div class="container mt-5">
<div class="row justify-content-center">
<br/><br/>
            <div class="col-md-4">
                <div class="custom-box">
                 <div class="box-title">Mensal</div>
                  <a href="/cliente/cliente?id_projeto=<%= @organizacao.idProject  %>&titulo_coleta=ColetaMensal" class="btn <%= @tituloColeta == 'ColetaMensal' ? 'btn-success  ': 'btn-secondary ' %> btn-primary  text-white" >Filtrar Coleta</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="custom-box">
                <div class="box-title">Semestral</div>
                    <a href="/cliente/cliente?id_projeto=<%= @organizacao.idProject  %>&titulo_coleta=ColetaSemestral" class="btn <%= @tituloColeta == 'ColetaSemestral' ? 'btn-success ': 'btn-secondary ' %> btn-primary   text-white">Filtrar Coleta</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="custom-box">
                    <div class="box-title">Anual</div>
                    <a href="/cliente/cliente?id_projeto=<%= @organizacao.idProject  %>&titulo_coleta=ColetaAnual" class="btn <%= @tituloColeta == 'ColetaAnual' ? 'btn-success ': 'btn-secondary ' %> btn-primary   text-white">Filtrar Coleta</a>
                </div>
            </div>
        </div>
</div>




<br/><br/>
            
       
    

<div class="container mt-5">
   

     <div class="box-title">Coletas <BR/></div>
        <table class="table table-custom">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Data</th>
                    <th scope="col">Status</th>
                    <th scope="col">Formulário</th>
                    <th scope="col">Tipo</th>
                    <th scope="col">Ação</th>
                </tr>
            </thead>
            <tbody>

                <% for coleta in @coletas %>
                <tr>
                    <td><%= coleta.textoData %></td>
                    
                     <td><span class="badge rounded-pill <%= coleta.status == 'Aguardando Coleta' ? 'bg-secondary' : coleta.status == 'Coleta Realizada' ? 'bg-success' : 'bg-danger' %>"><%= coleta.status %></span></td>
                    <td><%= coleta.tituloColeta %></td>
                    <td><%= coleta.tipoColeta %></td>
                    <% if coleta.dataRealizacao.nil? %>
                        <% if coleta.tituloColeta == 'Coleta Mensal' %>
                          <td>
                              <%= form_for coleta, url: coleta_mensalfazer_path do |f| %>
                                   <%= f.hidden_field :mes, :value => coleta.mes %>
                                   <%= f.hidden_field :ano, :value => coleta.ano %>
                                   <%= f.hidden_field :tituloColeta, :value => coleta.tituloColeta %>
                                   <%= f.hidden_field :tipoColeta, :value => coleta.tipoColeta %>
                                   <%= f.hidden_field :project_id, :value => coleta.project_id %>
                                   <%= f.hidden_field :semestre, :value => coleta.semestre %>
                                  <p><%= f.submit "Fazer coleta", class:"btn btn-outline-secondary" %> </p>
                            <% end %>
                          </td>
                        <% end %>
                        <% if coleta.tituloColeta == 'Coleta Semestral' %>
                           <td>
                              <%= form_for coleta, url: coleta_semestralfazer_path do |f| %>
                                   <%= f.hidden_field :mes, :value => coleta.mes %>
                                   <%= f.hidden_field :ano, :value => coleta.ano %>
                                   <%= f.hidden_field :tituloColeta, :value => coleta.tituloColeta %>
                                   <%= f.hidden_field :tipoColeta, :value => coleta.tipoColeta %>
                                   <%= f.hidden_field :project_id, :value => coleta.project_id %>
                                   <%= f.hidden_field :semestre, :value => coleta.semestre %>
                                   <%= f.submit "Fazer coleta", class:"btn btn-outline-secondary" %>
                            <% end %>
                          </td>
                        <% end %>
                        <% if coleta.tituloColeta == 'Coleta Anual' %>
                           <td>
                              <%= form_for coleta, url: coleta_anual_fazerencalcescontratados_path do |f| %>
                                   <%= f.hidden_field :mes, :value => coleta.mes %>
                                   <%= f.hidden_field :ano, :value => coleta.ano %>
                                   <%= f.hidden_field :tituloColeta, :value => coleta.tituloColeta %>
                                   <%= f.hidden_field :tipoColeta, :value => coleta.tipoColeta %>
                                   <%= f.hidden_field :project_id, :value => coleta.project_id %>
                                   <%= f.hidden_field :semestre, :value => coleta.semestre %>
                                   <%= f.submit "Fazer coleta", class:"btn btn-outline-secondary" %>
                            <% end %>
                          </td>
                       <% end %>
                    <% else %>
                        <td>Enviada para o Analista</td>
                    <% end %>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>


<% end %>




