
<% if  @coletas.nil? %>
  <h2>Não há coletas para este cliente! </h2>
<% else %>

<div class="container">
  
       <div class="row justify-content-center">
            
            
       
    

<div class="container mt-5">
    <div class="box-title"><%= @organizacao.nome %><BR/></div>

     <div class="box-title">Coletas <BR/></div>
        <table class="table table-custom">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Data</th>
                    <th scope="col">Status</th>
                    <th scope="col">Formulário</th>
                    <th scope="col">Tipo</th>
                    <th scope="col">Ação</th>
                </tr>
            </thead>
            <tbody>

                <% for coleta in @coletas %>
                <tr>
                    <td><%= coleta.textoData %></td>
                    
                     <td><span class="badge rounded-pill <%= coleta.status == 'Aguardando Coleta' ? 'bg-danger' : coleta.status == 'Coleta Enviada' ? 'bg-success' : 'bg-secondary' %>"><%= coleta.status %></span></td>
                    <td><%= coleta.tituloColeta %></td>
                    <td><%= coleta.tipoColeta %></td>
                    <% if coleta.dataRealizacao.nil? %>
                        <% if coleta.tituloColeta == 'Coleta Mensal' %>
                          <td><a href="/coleta/mensalfazer?id_coleta=<%= coleta.id %>" class="btn btn-outline-secondary" >Fazer coleta</a> </td>
                        <% end %>
                        <% if coleta.tituloColeta == 'Coleta Semestral' %>
                          <td><a href="/coleta/semestralfazer?id_coleta=<%= coleta.id %>" class="btn btn-outline-secondary" >Fazer coleta</a> </td>
                        <% end %>
                        <% if coleta.tituloColeta == 'Coleta Anual' %>
                          <td><a href="/coleta/anualfazer?id_coleta=<%= coleta.id %>" class="btn btn-outline-secondary" >Fazer coleta</a> </td>
                        <% end %>
                    <% else %>
                        <td>Enviada para o Analista</td>
                    <% end %>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>


<% end %>




