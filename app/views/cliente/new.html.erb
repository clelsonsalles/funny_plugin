<h3>Informar dados do novo Cliente</h3>

<%= form_for @cliente, url: cliente_index_path do |f| %>

<div style='float: left; width: 33%'>
    <div class="form-group">
        <%= f.label :empresaNome, 'Nome da Empresa' %>
        <%= f.text_field :empresaNome, class: "form-control" %>
    </div>
</div>
<div style='clear: both'></div>

    <div class="form-inline">
        <%= link_to "Cancelar", welcome_path, class: "icon icon-cancel float-left small-text" %>
        <%= f.submit "Inserir novo Cliente", class:" icon icon-add float-right" %>
    </div>
<% end %>

